<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="420dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/abc_popup_background_mtrl_mult">

    <TextView
        android:id="@+id/hint_lab"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="提示"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:background="#dadada"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/hint_cancel_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_cancel"
        app:layout_constraintTop_toTopOf="@id/hint_lab"
        app:layout_constraintBottom_toBottomOf="@id/hint_lab"
        app:layout_constraintEnd_toEndOf="@id/hint_lab"/>

    <WebView
        android:id="@+id/webview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="6dp"
        app:layout_constraintTop_toBottomOf="@id/hint_lab"
        app:layout_constraintBottom_toTopOf="@id/skip_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/skip_btn"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="我想略過這題"
        android:textColor="#3a65c4"
        android:textSize="16sp"
        android:background="@null"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>